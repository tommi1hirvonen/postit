@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    Hello, @context.User.Identity?.Name
                    <a href="/.auth/logout?post_logout_redirect_uri=/">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/login/aad">Log in with Microsoft</a>
                    <a href="/login/google">Log in with Google</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
